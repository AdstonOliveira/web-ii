<!DOCTYPE html>
<html lang="en">

<%- include('../includes/head.ejs') %>

<body>
  <%- include('../includes/navbar.ejs') %>
  <section class="container">
    <h1>Provas Cadastradas</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <td>Disciplina</td>
          <td>Professor</td>
          <td>Data</td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% for (let prova of provas) { %>
        <tr>
          <td><%= prova.disciplina %></td>
          <td><%= prova.professor %></td>
          <td><%= prova.dataProva %></td>
          <td>
            <a href="/provas/editar/<%= prova.id %>" class="btn btn-secondary btn-sm">Editar</a>
            <a href="/provas/excluir/<%= prova.id %>" class="btn btn-sm btn-danger">Excluir</a>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <div class="row justify-content-end">
      <a class="btn btn-outline-primary" href="/provas/nova">Nova Prova</a>
    </div>
  </section>
  <%- include('../includes/scripts.ejs') %>
</body>

</html>